{{#ember-native-scrollable content-size=_contentSize scroll-left=_scrollLeft scroll-top=_scrollTop scrollChange=(action "scrollChange") clientSizeChange=(action "clientSizeChange")}}
  <div>
    {{~#each cells as |cell|~}}
      <div style={{{cell.style}}}>{{#unless cell.hidden}}{{yield cell.item cell.index }}{{/unless}}</div>
    {{~/each~}}
  </div>
{{/ember-native-scrollable}}
{{ember-scrollbar direction="vertical" scroll-top=_scrollTop content-height=_contentSize.height viewport-height=_clientSize.height}}
{{ember-scrollbar direction="horizontal"  scroll-left=_scrollLeft content-width=_contentSize.width viewport-width=_clientSize.width}}
